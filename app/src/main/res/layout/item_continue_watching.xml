<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/dark_surface">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_movie"
            android:contentDescription="Portada del contenido"/>

        <!-- Un gradiente oscuro para que el botón de play resalte -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_circle"
            app:tint="@color/white"
            android:contentDescription="Reproducir"/>

        <!-- Barra de progreso para mostrar cuánto se ha visto -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:progressTint="@color/red_accent"
            android:progressBackgroundTint="@color/dark_text"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
